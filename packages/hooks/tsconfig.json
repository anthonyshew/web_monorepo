{
  "extends": "tsconfig/react-library.json",
  "include": ["."],
  "compilerOptions": {
    "strict": false,
    "paths": {
      "@hooks/*": ["src/*"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "exclude": ["dist", "build", "node_modules"]
}
